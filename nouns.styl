html, body
  height: 100%
  font-family: verdana
  font-size: 14px

h1, h2, h3, h4, h5, h6
  font-family: Futura
  font-weight: 100

html
  background-image: url('/texture.jpeg')

body
  background: #f1f1f1
  border-left: 1px solid rgba(0, 0, 0, 0.3)
  border-right: 1px solid rgba(0, 0, 0, 0.3)
  box-shadow: rgba(0, 0, 0, 0.3) 0 0 8px
  margin: auto
  padding: 0 2em
  width: 600px

h1
  margin-top: 0
  padding-top: 0.5em
  text-align: center

.text
  border: 1px solid rgba(0, 0, 0, 0.3)
  box-sizing: border-box
  width: 100%
  font-size: 16px
  padding: 10px
  margin: auto
  outline: none
  border-radius: 15px

.preview_text, .output
  display: inline-block

ul
  list-style: none
  padding-left: 0

  .sentence
    margin-bottom: 1em

h2
  margin-top: 2em
